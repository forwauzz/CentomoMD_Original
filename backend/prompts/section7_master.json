  "dates": {
    "formats_autorises": [
      "d MMMM yyyy",
      "d MMM yyyy",
      "dd MMMM yyyy"
    ],
    "normaliser_noms_mois": true,
    "exemples": [
      "le 23 octobre 2022",
      "le 1er août 2024"
    ]
  },

  "motifs": {
    "regex_entree": "^\\s*(Le travailleur|La travailleuse)\\s+(consulte|rencontre|revoit|obtient un rendez-vous avec|se présente chez)\\s+(le docteur|la docteure|le médecin|la médecin)\\s+[^,]+,\\s+le\\s+[0-9]{1,2}(er)?\\s+[A-Za-zéûàî]+\\s+[0-9]{4}\\.?\\s",
    "regex_interdire_date_premier": "^\\s*Le\\s+[0-9]{1,2}",
    "regex_titre_medecin": "\\b(le docteur|la docteure|Dr\\.|Dre\\.)\\b",
    "regex_bloc_citation": "«[\\s\\S]*?»",
    "regex_presence_evolution": "\\b(améliorée|stable|détériorée|plateau|consolidation|séquelles)\\b"
  },

  "normalisation": {
    "corrections_casse": [
      { "trouver": "\\bDocteur\\b", "remplacer": "docteur" },
      { "trouver": "\\bDocteure\\b", "remplacer": "docteure" }
    ],
    "remplacements_termes_ci": [
      { "trouver": "\\ble\\s+patient\\b", "remplacer": "le travailleur" },
      { "trouver": "\\bla\\s+patiente\\b", "remplacer": "la travailleuse" }
    ],
    "titres": {
      "toujours_exiger_titre": true,
      "titres_preferes": ["le docteur", "la docteure", "Dr.", "Dre."]
    },
    "espacements": {
      "apres_virgule": true,
      "espaces_simples": true
    }
  },

  "verifications_QA": {
    "exiger_travailleur_en_premier": true,
    "interdire_commencer_par_date": true,
    "exiger_titre_medecin_par_entree": true,
    "exiger_date_par_entree": true,
    "exiger_paragraphe_par_evenement": true,
    "exiger_variation_verbes": {
      "minimum_verbes_distincts": 2
    },
    "exiger_mentions_evolution": {
      "au_moins_une": true
    },
    "chronologie": {
      "appliquer": true,
      "direction": "ascendante"
    },
    "garde_fou_doublons": {
      "activer": true,
      "distance_min_caracteres": 50
    },
    "integrite_citations": {
      "preserver_exactitude": true
    }
  },

  "exemples": [
    {
      "note_entree": "première consultation, dr bussière, 23 octobre 2022, entorse cervicale, prescrit physio",
      "extrait_sortie": "Le travailleur consulte le docteur Nicolas Bussière, le 23 octobre 2022. Il diagnostique une entorse cervicale et prescrit de la physiothérapie."
    },
    {
      "note_entree": "suivi dr leclerc 1er août 2024, contusion lombaire stable, retour progressif",
      "extrait_sortie": "Le travailleur revoit le docteur Marc Leclerc, le 1er août 2024. Il juge la condition clinique stable et prescrit un retour au travail progressif."
    }
  ],

  "politique_injection": {
    "toujours_injecter_sections": ["regles_style", "terminologie.verbes_consultation", "exemples"],
