      "chronologique": true,
      "ascendant": true,
      "meme_jour_plusieurs": true
    },
    "indice_modele_entree": "Le travailleur/La travailleuse [verbe] le docteur/la docteure [Nom], le [date]. [contenu]"
  },

  "regles_style": {
    "travailleur_en_premier": true,
