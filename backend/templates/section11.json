      }
    },
    "validation_rules": {
      "required_sections": [
        "resume_medical",
        "diagnostics",
        "date_consolidation",
        "sequelles",
        "pourcentage_atteinte",
        "capacite_travail",
        "recommandations"
      ],
      "min_length": 300,
      "max_length": 2000,
      "date_format": "DD/MM/YYYY",
      "percentage_required": true,
      "total_percentage_max": 100
    }
  },
