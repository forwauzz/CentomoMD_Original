{
  "id": "section_11_template_fr",
  "section": "section_11",
  "name": "Conclusion médicale - Français",
  "description": "Template pour la section 11 du formulaire CNESST - Conclusion médicale",
  "language": "fr",
  "version": "1.0.0",
  "is_active": true,
  "content": {
    "structure": {
      "title": "SECTION 11 - CONCLUSION MÉDICALE",
      "sections": [
        {
          "name": "resume_medical",
          "title": "Résumé médical",
          "template": "Basé sur l'évaluation clinique et les examens complémentaires, le patient présente [DIAGNOSTIC_PRINCIPAL] avec [SYMPTOMES_ASSOCIES]. L'évolution clinique est [EVOLUTION_CLINIQUE].",
          "required": true,
          "voice_triggers": [
            "résumé médical",
            "diagnostic principal",
            "conclusion médicale"
          ]
        },
        {
          "name": "diagnostics",
          "title": "Diagnostics",
          "template": "Diagnostics établis : [LISTE_DIAGNOSTICS]. Ces diagnostics sont confirmés par [ELEMENTS_CONFIRMATION].",
          "required": true,
          "voice_triggers": [
            "diagnostics",
            "diagnostic",
            "pathologie"
          ]
        },
        {
          "name": "date_consolidation",
          "title": "Date de consolidation",
          "template": "La date de consolidation médicale est établie au [DATE_CONSOLIDATION]. Cette date est basée sur [CRITERES_CONSOLIDATION].",
          "required": true,
          "voice_triggers": [
            "date consolidation",
            "consolidation médicale",
            "guérison"
          ]
        },
        {
          "name": "sequelles",
          "title": "Séquelles",
          "template": "Les séquelles permanentes identifiées incluent : [LISTE_SEQUELLES]. Ces séquelles ont un impact [IMPACT_SEQUELLES].",
          "required": true,
          "voice_triggers": [
            "séquelles",
            "séquelles permanentes",
            "dommages permanents"
          ]
        },
        {
          "name": "pourcentage_atteinte",
          "title": "Pourcentage d'atteinte",
          "table": {
            "headers": ["Région anatomique", "Pourcentage d'atteinte", "Justification"],
            "rows": [
              ["[REGION_1]", "[POURCENTAGE_1]%", "[JUSTIFICATION_1]"],
              ["[REGION_2]", "[POURCENTAGE_2]%", "[JUSTIFICATION_2]"],
              ["[REGION_3]", "[POURCENTAGE_3]%", "[JUSTIFICATION_3]"]
            ]
          },
          "required": true,
          "voice_triggers": [
            "pourcentage atteinte",
            "évaluation atteinte",
            "pourcentage invalidité"
          ]
        },
        {
          "name": "capacite_travail",
          "title": "Capacité de travail",
          "template": "La capacité de travail du patient est [EVALUATION_CAPACITE]. Les limitations fonctionnelles incluent [LIMITATIONS_FONCTIONNELLES].",
          "required": true,
          "voice_triggers": [
            "capacité travail",
            "aptitude travail",
            "limitations professionnelles"
          ]
        },
        {
          "name": "recommandations",
          "title": "Recommandations",
          "template": "Recommandations médicales : [LISTE_RECOMMANDATIONS]. Ces recommandations visent à [OBJECTIF_RECOMMANDATIONS].",
          "required": true,
          "voice_triggers": [
            "recommandations",
            "traitement recommandé",
            "suivi médical"
          ]
        },
        {
          "name": "pronostic",
          "title": "Pronostic",
          "template": "Le pronostic à long terme est [EVALUATION_PRONOSTIC]. Les facteurs pronostiques incluent [FACTEURS_PRONOSTIQUES].",
          "required": false,
          "voice_triggers": [
            "pronostic",
            "évolution future",
            "perspectives"
          ]
        }
      ]
    },
    "voice_commands": [
      {
        "trigger": "résumé médical",
        "action": "start_medical_summary",
        "parameters": {
          "section": "section_11",
          "type": "summary"
        }
      },
      {
        "trigger": "pourcentage atteinte",
        "action": "insert_impairment_percentage",
        "parameters": {
          "section": "section_11",
          "type": "impairment"
        }
      },
      {
        "trigger": "conclusion finale",
        "action": "end_section",
        "parameters": {
          "section": "section_11",
          "save": true
        }
      },
      {
        "trigger": "diagnostic principal",
        "action": "insert_primary_diagnosis",
        "parameters": {}
      },
      {
        "trigger": "date consolidation",
        "action": "insert_consolidation_date",
        "parameters": {
          "format": "DD/MM/YYYY"
        }
      },
      {
        "trigger": "séquelles permanentes",
        "action": "insert_permanent_sequelae",
        "parameters": {}
      },
      {
        "trigger": "capacité travail",
        "action": "insert_work_capacity",
        "parameters": {}
      }
    ],
    "formatting_rules": {
      "paragraph_spacing": "double",
      "font_family": "Arial",
      "font_size": "12pt",
      "line_spacing": "1.5",
      "margins": {
